# JaCoCo API 环境配置文件
# 复制此文件为 .env 并根据实际情况修改配置

# 配置存储类型 (file, docker, mysql)
CONFIG_STORAGE_TYPE=mysql

# MySQL数据库配置
MYSQL_HOST=172.16.1.30
MYSQL_PORT=3306
MYSQL_DATABASE=jacoco_config
MYSQL_USER=jacoco
MYSQL_PASSWORD=asd301325..

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8002
DEBUG_MODE=false

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/jacoco_api.log

# JaCoCo扫描配置
JACOCO_TIMEOUT=1800
JACOCO_USE_DOCKER=true
JACOCO_FORCE_LOCAL_SCAN=false

# Lark通知配置
ENABLE_NOTIFICATIONS=true
DEFAULT_NOTIFICATION_TIMEOUT=10
DEFAULT_RETRY_COUNT=3

# 安全配置
ADMIN_PASSWORD=asd301325..
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# Docker配置
DOCKER_NETWORK=bridge
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=2

# 报告存储配置
REPORTS_BASE_DIR=./reports
REPORTS_RETENTION_DAYS=30
ENABLE_HTML_REPORTS=true

# 数据库连接池配置
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# 备份配置
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups
